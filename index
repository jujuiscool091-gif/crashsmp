    <!-- JavaScript for tab switching, mobile menu, and modals -->
    <script>
        // Tab functionality
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabPanels = document.querySelectorAll('.tab-panel');

        function showTab(tabId) {
            tabPanels.forEach(panel => {
                panel.classList.add('hidden');
                panel.classList.remove('grid');
            });

            tabButtons.forEach(button => {
                button.classList.remove('active');
            });

            const activePanel = document.getElementById(tabId);
            activePanel.classList.remove('hidden');
            activePanel.classList.add('grid');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');
        }

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                showTab(button.dataset.tab);
            });
        });

        // Show the first tab by default on page load
        showTab('ranks');

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Modal functionality
        const usernameModal = document.getElementById('username-modal');
        const paymentModal = document.getElementById('payment-modal');
        const modalTitle = document.getElementById('modal-title');
        const purchaseButtons = document.querySelectorAll('.purchase-button');
        const closeUsernameModalButton = document.getElementById('close-username-modal-button');
        const closePaymentModalButton = document.getElementById('close-payment-modal-button');
        const purchaseForm = document.getElementById('purchase-form');
        const submitButton = document.getElementById('submit-button');
        

        purchaseButtons.forEach(button => {
            button.addEventListener('click', () => {
                const itemName = button.dataset.item;
                modalTitle.textContent = `Purchase ${itemName}`;
                usernameModal.classList.remove('hidden');
            });
        });

        closeUsernameModalButton.addEventListener('click', () => {
            usernameModal.classList.add('hidden');
        });

        closePaymentModalButton.addEventListener('click', () => {
            paymentModal.classList.add('hidden');
        });

        purchaseForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const username = document.getElementById('username-input').value;
            
            // Show a temporary loading state
            submitButton.textContent = 'Processing...';
            submitButton.disabled = true;

            setTimeout(() => {
                // In a real application, you would send this data to a server for processing
                usernameModal.classList.add('hidden');
                document.getElementById('username-input').value = '';
                submitButton.textContent = 'Submit';
                submitButton.disabled = false;
                
                // Show the payment modal
                paymentModal.classList.remove('hidden');
            }, 1000); // Simulate a network request delay
        });
        
    </script>
